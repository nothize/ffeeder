{
	"name" : "Forum feeder",
	"manifest_version" : 2,
	"version" : "1.3.1",
	"description" : "A forum monitor. (In slow development)",
	"background" : {
		"page": "bg.html",
		"persistent": false
	},
	"icons" : { "19": "icon_19.png", "48" : "icon_48.png", "128" : "icon_128.png" },
	"browser_action" : {
		"default_icon": "icon_19.png",
		"default_title": "Forum Feeder",
		"default_popup" : "popup.html"
	},
	"permissions" : [
		"alarms", "tabs", "http://*.discuss.com.hk/*"
	],
	"options_page" : "options.html"
}